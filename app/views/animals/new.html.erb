

<div class="container">
  <div class="d-flex justify-content-centre">
    <div class="col-sm-6">

    <h1>Add a buddy !</h1>

    <%= simple_form_for @animal do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :species%>
        <%= f.input :category%>
        <%= f.input :requirement%>
        <%= f.input :age_ago%>
        <%= f.input :location%>
        <%= f.input :habitat%>
        <%= f.input :price%>
        <%= f.input :description%>
        <%= f.input :image%>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
    </div>
  </div>
</div>
