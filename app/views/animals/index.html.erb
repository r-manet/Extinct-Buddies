<div class="container">
  <div class="row">
      <div class="col-md-8">
        <div class="animal-grid">
          <% @animals.each do |animal| %>
          <div class="animal-card-wrapper">
            <div class="animal-card">
              <img class="card-img-top"src="<%= animal.image %>" alt="image of the creature"style="height: 150px; object-fit: cover;">
              <div class="card-body"style="background-color: white; height: 150px;">
                <div class="d-flex justify-content-between align-items-center-mb-2">
                    <h5 class="card-title pt-0 mb-0"> <%= animal.name %></h5><span>Â£<%= animal.price %></span>
                </div>
                <p class="card-text"><%= animal.description%></p>
                <%= link_to 'Buddy details', animal_path(animal), :class =>"btn btn-dark"%>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
