
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="animal-grid">
        <% @animals.each do |animal| %>
          <div class="animal-card-wrapper">
            <div class="animal-card">
              <%= cl_image_tag animal.photo.key, class:"card-img-top"%>
              <div class="card-body"style="background-color: white; height: 150px;">
                <div class="d-flex justify-content-between align-items-center-mb-2">
                    <h5 class="card-title pt-0 mb-0"> <%= animal.name %></h5><span>Â£<%= animal.price %></span>
                </div>
                <p class="card-text"><%= animal.description%></p>
                <%= link_to 'Buddy details', animal_path(animal), :class =>"btn btn-dark"%>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
